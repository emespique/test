      "source": [
        "# input\n",
        "orig_word = input('Enter a word or phrase: ')\n",
        "word = orig_word.lower().replace(\" \",\"\")\n",
        "\n",
        "# processing\n",
        "def isPalindrome(word):\n",
        "  return word == word[::-1]\n",
        "\n",
        "if isPalindrome(word):\n",
        "    print(f'\"{orig_word}\" is a palindrome.')\n",
        "else:\n",
        "    print(f'\"{orig_word}\" is NOT a palindrome.')"
      ],
